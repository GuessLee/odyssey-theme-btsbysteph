---
const { href, unelevated, outlined, customIcon, onPrimary, newTab, accent } =
  Astro.props;

const Tag = href ? 'a' : 'button';
---

<Tag
  class={`btn ${unelevated && `btn--unelevated`} ${
    outlined && `btn--outlined`
  } ${onPrimary && `btn--on-primary`} ${accent && `btn--accent`}`}
  href={href}
  target={`${newTab ? '_blank': ``}`}
  rel={`${newTab ? 'noopener noreferrer' : ``}`}
>
  <slot />
  {customIcon && <span class="custom-icon__span"><slot name="icon">custom_icon</slot></span>}
</Tag>

<style>
  .btn {
    width: fit-content;
    padding: 0.875rem 2rem;
    margin-bottom: 0;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    background-color: var(--theme-primary);
    color: var(--theme-on-primary);
    border: 2px solid var(--theme-primary);
    border-radius: 0;
    font-family: var(--theme-font-family-sans);
    font-size: var(--font-size-sm);
    font-weight: 500;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    transition: all var(--theme-transition);
    cursor: pointer;
  }

  .btn:hover {
    background-color: transparent;
    color: var(--theme-primary);
  }

  /* Accent button style - terracotta */
  .btn--accent {
    background-color: var(--theme-accent);
    border-color: var(--theme-accent);
    color: #fff;
  }

  .btn--accent:hover {
    background-color: transparent;
    color: var(--theme-accent);
  }

  .btn--unelevated {
    background-color: transparent;
    color: var(--theme-on-bg);
    border-color: transparent;
  }

  .btn--unelevated:hover {
    background-color: transparent;
    color: var(--theme-accent);
  }

  /* Outlined - elegant border style */
  .btn--outlined {
    color: var(--theme-primary);
    background-color: transparent;
    border: 2px solid var(--theme-primary);
  }

  .btn--outlined:hover {
    background-color: var(--theme-primary);
    color: var(--theme-on-primary);
  }

  /* Accent outlined variant */
  .btn--outlined.btn--accent {
    color: var(--theme-accent);
    border-color: var(--theme-accent);
  }

  .btn--outlined.btn--accent:hover {
    background-color: var(--theme-accent);
    color: #fff;
  }

  /* On primary surface */
  .btn--on-primary {
    background-color: var(--theme-on-primary);
    color: var(--theme-primary);
    border-color: var(--theme-on-primary);
  }

  .btn--on-primary:hover {
    background-color: transparent;
    color: var(--theme-on-primary);
    border-color: var(--theme-on-primary);
  }

  .custom-icon__span {
    margin-left: 0.25rem;
    display: flex;
    align-items: center;
    transition: transform var(--theme-transition);
  }

  .btn:hover .custom-icon__span {
    transform: translateX(4px);
  }

  .custom-icon__span :global(svg) {
    width: 20px;
    height: 20px;
  }

  a.btn {
    text-decoration: none;
  }

  button.btn {
    outline: none;
  }
</style>
