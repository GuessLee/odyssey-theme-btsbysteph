---
import { Button, FormInput, FormSelect, FormTextarea } from '@components/odyssey-theme';

const selectOptions = [
  "Google Search",
  "Social Media",
  "Vendor Referral",
  "Referral",
  "Email",
]

---

<form name="Contact Form" method="POST" action="/contact-thank-you">
	<FormInput
		type="text"
		label="First Name"
		name="FirstName"
		placeholder="First Name"
	/>
	<FormInput
		type="text"
		label="Last Name"
		name="LastName"
		placeholder="Last Name"
	/>
	<FormInput
		type="text"
		label="Phone Number"
		name="Phone"
		placeholder="Phone Number"
	/>
	<FormInput
		type="email"
		label="Email"
		name="Email"
		placeholder="hello@example.com"
	/>
	<FormInput
		type="text"
		label="Date of Event"
		name="DateOfEvent"
		placeholder="MM/DD/YYYY"
	/>
	<FormInput
		type="text"
		label="Location of Event (city, and venue name)"
		name="LocationOfEvent"
		placeholder="Location of Event"
	/>
	<FormSelect label="How Did You Hear About Us?" options={selectOptions} />
	<FormTextarea
		label="Message"
		name="Message"
		placeholder="Your message here..."
	/>
	<Button>Submit</Button>
</form>

<style>
  form {
    display: grid;
    grid-template-columns: 1fr;
    gap: 1rem;
  }
</style>