---
import Container from '../core/Container.astro';

const {background, color} = Astro.props;
---
<Container>
  <section class="cta-card__section" style={background && `--section-bg:${background}; --section-color:${color}`}>
    <div class="cta-card__container">
      <slot></slot>
    </div>
  </section>
</Container>

<style>
  .cta-card__section {
    --section-bg: var(--theme-surface-3, #1a1a1a);
    --section-color: var(--theme-on-surface-3, #ffffff);
    margin: calc(var(--section-margin) * 1.5) auto;
    padding: 5rem 3rem;
    background-color: var(--section-bg);
    color: var(--section-color);
    border-radius: 0;
    position: relative;
    overflow: hidden;
  }

  .cta-card__section::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 3px;
    background: linear-gradient(90deg, transparent, var(--theme-accent), transparent);
  }

  .cta-card__container {
    margin: 0 auto;
    max-width: var(--container-max-width-narrow);
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
  }

  .cta-card__container :global(h2) {
    font-family: var(--theme-font-family-display);
    font-size: var(--font-size-xl);
    font-weight: 500;
    margin-bottom: 1rem;
  }

  .cta-card__container :global(p) {
    font-family: var(--theme-font-family-serif);
    font-size: var(--font-size-md);
    font-style: italic;
    opacity: 0.9;
    margin-bottom: 2rem;
  }

  @media (max-width: 768px) {
    .cta-card__section {
      padding: 4rem 2rem;
    }
  }
</style>
