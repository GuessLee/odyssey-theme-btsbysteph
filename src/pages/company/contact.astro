---
import ContactForm from '../../components/forms/ContactForm.astro';
import Layout from '../../layouts/Page.astro';
import { Container } from '@components/odyssey-theme';

const seo = {
	title: 'Contact | Astro Odyssey Theme',
	description: 'Contact Page',
};
---

<Layout seo={seo}>
	<Container>
		<section class="contact-hero__section">
			<div class="contact-hero__text-section">
				<h1>Contact Me</h1>
				<p>
					"This is your direct line to me. I've crafted a contact form to ensure a seamless connection between us. Whether you're planning your dream wedding or have questions, feel free to reach out. I'm eager to hear from you!"
				</p>
				<div>
					<p>
						<a href="mailto:hello@odysseytheme.com">info@btsbs.com</a>
					</p>
				</div>

				<!-- ðŸ“Œ New Video Embed Below Email -->
				<div class="contact-video">
					<video autoplay loop muted playsinline width="300">
						<source src="https://btsbs.s3.us-east-2.amazonaws.com/C-IaHybR3N0_contact.mp4" type="video/mp4">
						Your browser does not support the video tag.
					</video>
				</div>
			</div>

			<div class="col-2__container">
				<ContactForm />
			</div>
		</section>
	</Container>
</Layout>

<style>
	.contact-hero__section {
		margin: var(--section-margin) auto;
		display: grid;
		grid-template-columns: 1fr 1fr;
		min-height: calc(90vh - var(--navbar-height));
		gap: 3rem;
	}
	.contact-hero__text-section {
		padding: 2rem;
		display: flex;
		flex-direction: column;
		justify-content: center;
		background-color: var(--theme-surface-1);
		border-radius: var(--theme-shape-radius);
	}
	.col-2__container {
		display: flex;
		flex-direction: column;
		justify-content: center;
	}
	.contact-video {
		margin-top: 20px;
		display: flex;
		justify-content: center;
	}
	.contact-video video {
		border-radius: 10px;
		box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.2);
		width: 300px; /* Ensures the video is smaller */
	}
	@media (max-width: 768px) {
		.contact-hero__section {
			grid-template-columns: 1fr;
		}
		.contact-video video {
			width: 90%; /* Makes it responsive */
		}
	}
</style>